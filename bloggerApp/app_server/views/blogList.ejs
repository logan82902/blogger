<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/navbar') %>
    <%- include('./partials/layout') %>
  </head>
  <body>
    <p>
      <% if (Array.isArray(blogs) && blogs.length > 0) { %>
        <% blogs.forEach(function(blog) { %>
          <div class="card border-primary" style="width: 50%">
            <div class="card-header">
              <div class="row">
              </div>
            </div>
            <div class="card-body">
              <h5 class="card-title"><b><%= blog.title %></b></h5>
              <p style="color: grey; font-size: 15px"><%= blog.createdOn %></p>
              <p class="card-text"><%= blog.text %></p>
            </div>
            <div class="card-footer">
              <div class="row">
                <div class="col-sm">
                  <ul class="nav justify-content-end nav-pills card-header-pills">
                    <li class="nav-item">
                      <a class="nav-link" href="/blogEdit/<%= blog._id %>">
                        <i class="fas fa-edit"></i>
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/blogDelete/<%= blog._id %>">
                        <i class="fas fa-trash-alt"></i>
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <p></p>
        <% }); %>
      <% } else { %>
        <h4>No blogs to display. Add one above.</h4>
      <% } %>
    </p>
  </body>
</html>
